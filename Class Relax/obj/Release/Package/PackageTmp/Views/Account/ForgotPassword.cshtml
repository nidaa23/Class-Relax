@model Class_Relax.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style lang="he" dir="rtl">
   .dr{
       direction:rtl!important;
   }
    #rect {

        position: center;
        width: 500px;
        height: 300px;
        background: #fafafa;
        margin-right: 350px;
        border: thin;
        border-style: solid;
        border-color: #78c2ad;
        filter: drop-shadow(2 6 35px #f8f6f6);
        margin-right:28%;
    }

    .text-f {
        font-size: 15px;
        color: #000000;
        font-weight: 400;
        font-family: 'Segoe UI';
        text-align: center;
        
    }

    #centerPage {
        align-items: center;
        justify-content: center;
        flex-direction: column;
        text-align: center;
    }

    #fieldsTo {
        color: black;
        font-weight: 400 !important;
        text-align: center;
        font-family: "Montserrat", -apple-system, system-ui, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
    }
    #btnp{

        width:60%;
        margin-right:20%;
    }
    #btnp2 {
        margin-right: 6%;
    }
    @@media (max-width: 767px) {
        #rect {
            float: right;
            width: 100%;
            height: 100%;
            background: #fafafa;
            margin-right: 350px;
            border: thin;
            border-style: solid;
            filter: drop-shadow(2 6 35px #f8f6f6);
            border-color: #78c2ad;
            padding-right: 0px;
            right: 0;
            margin-right: 0;
            margin: 0;
        }
    }
</style>


@using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
<div class="dr">
    <p style="padding-top:50px;"></p>
   
        <div id="rect">
            <div id="centerPage">
                @Html.AntiForgeryToken()


                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    <p class="text-f"> הקלד כתובת מייל שלך</p>
                    <div class="col-md-7" id="btnp">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control",@id= "centerPage" })
                    </div>
                </div>
                <p style="padding-bottom:15px"></p>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10"id="btnp2" >
                        <input type="submit" class="btn btn-primary " value="שלח קישור" />
                    </div>
                </div>

            </div>
        </div>
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
